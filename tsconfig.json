{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "public",
    "rootDir": "src",
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "src/script.ts"],
  "ts-node": {
    "esm": true,
    "experimentalResolver": true
  }
}
